// === COLORS
$dark = #151515
$light = #f3f5f6

// === Media Queris
$sm = '(min-width: 600px)'

// === Sprite Sheet
$sprite = 'data:image/png;base64,'

// === GLOBALS
*
  outline none

body
  background $light
  color $dark

a
  color black
  font-weight bold

button
  cursor pointer

.ellipsis
  display block
  white-space nowrap
  overflow hidden
  text-overflow ellipsis

// === DEBUG
#__bs_notify__
  top initial !important
  bottom 0

